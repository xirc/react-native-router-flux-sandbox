{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "sourceRoot": "src",
    "rootDir": "src",
    "outDir": "build",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "typings/index.d.ts",
    "!node_modules/**"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "src/sample.tsx",
    "typings/index.d.ts"
  ]
}
